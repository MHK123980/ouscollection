<!-- Hero Section Begin -->
<%- include("../partials/heroSection",{allCategories:allCategories}) %>
<!-- Hero Section End -->

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/img/breadcrumb.jpg">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <div class="breadcrumb__text">
          <h2>Checkout</h2>
          <div class="breadcrumb__option">
            <a href="/">Home</a>
            <a href="/user/cart">Cart</a>
            <span>Checkout</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Breadcrumb Section End -->

<!-- Checkout Section Begin -->
<section class="checkout spad">
  <div class="container">

    <% if(user.address.length>0){ %>
    <div class="row">
      <% user.address.forEach((myAddress,index)=>{%>
      <div class="col-md-4 col-sm-6 mb-2" id="address-<%= index %>">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><i class="fa-solid fa-location-dot"></i> <%= myAddress.firstName %></h5>
            <address class="card-text">
              <%= myAddress.firstName %>, <%= myAddress.house %>, <%= myAddress.address %>, <%= myAddress.areaName %>,<br>
              <%= myAddress.city %>, <%= myAddress.state %><br>
              ph: <%= myAddress.phone %>
              <% if(myAddress.phone2) { %><br>Alt: <%= myAddress.phone2 %><% } %>
            </address>
            <button class="btn btn-outline-dark" onclick="fillForm('<%=JSON.stringify(myAddress)%>','<%=Number(index)%>')">Use this address</button>
            <button class="float-right btn btn-outline-secondary" onclick="removeAddress('<%=Number(index)%>')"><i class="fa-solid fa-trash-can"></i></button>
          </div>
        </div>
      </div>
      <%}) %>
    </div>
    <% } %>

    <div class="checkout__form">
      <h4>Shipping Address</h4>
      <form action="/user/checkout" method="post" id="checkoutForm">
        <div class="row">
          <div class="col-lg-6" id="addressInputField">
            <div class="checkout__input">
              <p>Full Name<span>*</span></p>
              <input type="text" name="fullName" required>
            </div>
            <div class="row">
              <div class="col-lg-6">
                <div class="checkout__input">
                  <p>Mobile No<span>*</span></p>
                  <input type="tel" name="phone" minlength="11" maxlength="11" required>
                </div>
              </div>
              <div class="col-lg-6">
                <div class="checkout__input">
                  <p>Another Mobile No</p>
                  <input type="tel" name="phone2" minlength="11" maxlength="11">
                </div>
              </div>
            </div>
            <div class="checkout__input">
              <p>House No<span>*</span></p>
              <input type="text" name="house" required placeholder="House Number">
            </div>
            <div class="checkout__input">
              <p>Street Name/No<span>*</span></p>
              <input type="text" name="address" required placeholder="Street Name/Number" class="checkout__input__add">
            </div>
            <div class="checkout__input">
              <p>Area Name<span>*</span></p>
              <input type="text" name="areaName" required placeholder="Area Name">
            </div>
            <div class="checkout__input">
              <p>Famous Nearest Place</p>
              <input type="text" name="landmark" placeholder="e.g., Near XYZ Park">
            </div>
            <div class="row">
              <div class="col-lg-6">
                <div class="checkout__input">
                  <p>City<span>*</span></p>
                  <input type="text" name="city" required>
                </div>
              </div>
              <div class="col-lg-6">
                <div class="checkout__input autocomplete">
                  <p>Province<span>*</span></p>
                  <input type="text" name="state" id="state" required>
                </div>
              </div>
            </div>
            <div class="checkout__input">
              <p>Pincode</p>
              <input type="number" name="pincode" minlength="6" maxlength="6">
            </div>
            <div class="checkout__input">
              <p>Email</p>
              <input type="text" name="email" placeholder="<%= user.email %>" readonly>
            </div>

            <input type="hidden" id="address-index" name="addressIndex" value="">

            <% if(user.address.length>0){%>
            <div class="checkout__input__checkbox">
              <label for="new-address">
                Ship to a different address?
                <input name="newAddress" type="checkbox" id="new-address" checked onchange='handleChange(this)'>
                <span class="checkmark"></span>
              </label>
            </div>
            <% }else{%>
            <input name="newAddress" type="hidden" value="on">
            <% } %>
          </div>
          <div class="col-lg-6">
            <div class="checkout__order">
              <h4>Your Order</h4>
              <div class="checkout__order__products">Products <span>Total</span></div>
              <div>
                <ul>

                  <% findCart.products.forEach(item=>{%>
                  <li class="mb-2">
                    <img type="button" src="/files/<%= item.productId.productImagePath[0] %>" alt="" width="50" height="60">
                    <%= item.name %> x<%= item.quantity %>
                    <span>Rs <%= item.offerPrice ? (item.offerPrice*item.quantity).toFixed(2) : (item.price*item.quantity).toFixed(2)  %> </span>
                    <% const dCharge = Number(item.productId.deliveryCharges || 0) %>
                    <% const itemDelivery = item.productId.increaseDeliveryChargesWithQuantity ? (dCharge * item.quantity) : dCharge %>
                    <% if(itemDelivery && itemDelivery>0){ %>
                    <div class="small text-muted">Delivery: Rs <%= itemDelivery.toFixed(2) %><% if(item.productId.increaseDeliveryChargesWithQuantity){ %> (per piece: Rs <%= dCharge.toFixed(2) %>)<% } %></div>
                    <% } %>
                  </li>
                  <%}) %>

                </ul>
              </div>

              <div class="checkout__order__subtotal">Subtotal <span><del>Rs <%= findCart.subTotal.toFixed(2) %></del></span></div>
              <% if(couponCode){%>
              <div class="checkout__order__total">Cart Discount <span class="text-muted">Rs <%= (findCart.subTotal - findCart.total ).toFixed(2)%></span></div>
              <div class="checkout__order__total">Coupon <span class="text-muted"><i class="fa-solid fa-tags"></i> <%=couponCode %></span></div>
              <div class="checkout__order__total">Coupon Discount <span class="text-muted">Rs <%=couponDiscount %> </span></div>
              <div class="checkout__order__total">Delivery Charges <span class="text-muted">+ Rs <%= (findCart.totalDeliveryCharges || 0).toFixed(2) %></span></div>
              <div class="checkout__order__total">Total <span>Rs <%= (findCart.total + (findCart.totalDeliveryCharges || 0) - couponDiscount).toFixed(2) %></span></div>
              <%}else{ %>
              <div class="checkout__order__total">Cart Discount <span class="text-muted">Rs <%= (findCart.subTotal - findCart.total).toFixed(2) %> </span></div>
              <div class="checkout__order__total">Delivery Charges <span class="text-muted">+ Rs <%= (findCart.totalDeliveryCharges || 0).toFixed(2) %></span></div>
              <% let finalTotal = findCart.total + (findCart.totalDeliveryCharges || 0) %>
              <div class="checkout__order__total">Total <span>Rs <%= finalTotal.toFixed(2) %></span></div>
              <% } %>

              <div class="form-check">
                <label for="cod">
                  <input class="form-check-input" type="radio" id="cod" name="paymentType" checked value="cod">
                  Cash on delivery <i class="fa-solid fa-money-bill-1"></i>
                </label>
              </div>

              <div class="form-check">
                <label for="online-payment">
                  <input class="form-check-input" id="online-payment" type="radio" name="paymentType" value="razorpay" disabled>
                  Online Payment <span class="badge badge-warning">Coming Soon</span> <i class="fa-brands fa-cc-visa"></i>
                </label>
              </div>

              <button type="submit" class="site-btn" id="rzp-button1" style="cursor: pointer; pointer-events: auto;">PLACE ORDER <% if(couponCode){%> (Rs <%= (findCart.total + (findCart.totalDeliveryCharges || 0) - couponDiscount).toFixed(2) %>)<% }else{%> (Rs <%= (findCart.total + (findCart.totalDeliveryCharges || 0)).toFixed(2) %>)<% }%></button>
            </div>

          </div>
        </div>
      </form>
    </div>
  </div>
</section>

<!-- Checkout Section End -->
