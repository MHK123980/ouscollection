<!-- Hero Section Begin -->
<section class="hero hero-normal" id="heroSection">
  <div class="container">
    <div class="row">
      <div class="col-lg-3" id="heroDept">
        <div class="hero__categories">
          <div class="hero__categories__all">
            <i class="fa fa-bars"></i>
            <span>All departments</span>
          </div>
          <ul>
            <% allCategories.forEach((category)=>{ %>
            <li><a href="/shop/category/<%= category.categoryName %>/1"><%= category.categoryName %></a></li>
            <% }) %>
          </ul>
        </div>
      </div>
      <div class="col-lg-9" id="heroSearch">
        <div class="hero__search">
          <div class="hero__search__form autocomplete">
            <form action="/search/1" method="get" id="searchForm">
              <div class="hero__search__categories">
                All Categories
                <span class="arrow_carrot-down"></span>
              </div>
              <input type="text" placeholder="What do yo u need?" name="name" id="searchKey" onkeyup="sendData(this)">
              <button type="submit" class="site-btn">SEARCH</button>
            </form>
          </div>
          <div class="hero__search__phone" id="heroPhone">
            <div class="hero__search__phone__icon">
              <i class="fa fa-phone"></i>
            </div>
            <div class="hero__search__phone__text">
              <h5>+65 11.188.888</h5>
              <span>support 24/7 time</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script>
  // Hide department and phone sections on non-home/non-admin pages
  const pathname = window.location.pathname;
  const isAdminPage = pathname.includes('/admin');
  const isHomePage = pathname === '/' || pathname === '';
  
  if (!isAdminPage && !isHomePage) {
    document.getElementById('heroDept').style.display = 'none';
    document.getElementById('heroPhone').style.display = 'none';
    document.getElementById('heroSearch').classList.add('col-lg-12');
    document.getElementById('heroSearch').classList.remove('col-lg-9');
  }
</script>
<!-- Hero Section End -->