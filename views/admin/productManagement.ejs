<div class="container-fluid px-4">
  <h1 class="mt-4">Product Management</h1>
  <%- include("../partials/errorMessage") %>
  <div class="card mb-4">
    <div class="card-header">
      <i class="fas fa-table me-1"></i>
      Products
      <%- include("_modal_product") %>
      <div class=" float-end">
        <button class="btn btn-dark btn-sm" onclick="exportCsv()">Export <i class="fa-solid fa-download"></i></button>
        <button class="btn btn-dark btn-sm" data-bs-toggle="modal" data-bs-target="#addProduct">New Product <i class="fa-solid fa-circle-plus"></i></button>
      </div>
    </div>
    <div class="card-body">
      <table id="datatablesSimple">
        <thead>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Category</th>
            <th>Stock</th>
            <th>Price</th>
            <th>Discount %</th>
            <th>Offer Price</th>
            <th>Is Featured</th>
            <th>Action</th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Category</th>
            <th>Stock</th>
            <th>Price</th>
            <th>Discount %</th>
            <th>Offer Price</th>
            <th>Is Featured</th>
            <th>Action</th>
          </tr>
        </tfoot>
        <tbody>
          <% allProducts.forEach(product=>{ %>
          <tr>
            <td><img src="/files/<%= product.productImagePath[0]%>" alt="<%= product.name %>" width="60" class="img-fluid img-thumbnail"></td>
            <td><%= product.name %></td>
            <td><%= product.category ? product.category.categoryName : '-' %></td>
            <td><%= product.quantity %></td>
            <td><%= product.price %></td>
            <td><%= product.discount %></td>
            <td><%= product.offerPrice %></td>
            <% if(product.isFeatured){%>
            <td><span class="badge bg-success">Featured</span></td>
            <%}else{%>
            <td></td>
            <% } %> 
            <td>
              <form action="/admin/deleteProduct/<%= product.id%>?_method=DELETE" method="post">
                <div>
                  <button class="btn btn-sm btn-outline-dark" data-bs-toggle="modal" data-bs-target="#edit-<%= product.id %>" type="button"><i class="fa-solid fa-pen-to-square"></i></button>
                  <a class="btn btn-sm btn-outline-danger" href="#deleteModal<%= product.id %>" data-bs-toggle="modal"><i class="fa-solid fa-trash-can"></i></a>
                </div>
                <!-- delete modal start -->
                <div class="modal modal-alert" tabindex="-1" role="dialog" id="deleteModal<%= product.id %>">
                  <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content rounded-3 shadow">
                      <div class="modal-body p-4 text-center">
                        <h5 class="mb-2">Waring! Are you sure</h5>
                        <p class="mb-0">This change cant be undone.</p>
                      </div>
                      <div class="modal-footer flex-nowrap p-0">
                        <button type="submit" class="btn btn-lg btn-link fs-6 text-decoration-none col-6 m-0 rounded-0 border-end"><strong>Yes</strong></button>
                        <button type="button" class="btn btn-lg btn-link fs-6 text-decoration-none col-6 m-0 rounded-0" data-bs-dismiss="modal">No</button>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- delete modal end -->

              </form>
            </td>
          </tr>
          <!-- modal body  -->
          <div class="modal fade" id="edit-<%= product.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Edit Product</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <form action="/admin/editProduct/<%= product.id %>?_method=PUT" method="post" enctype="multipart/form-data">
                    <div>
                      <label class="form-label">name</label>
                      <input type="text" value="<%=product.name %>" name="name" required class="form-control">
                    </div>
                    <div>
                      <label class="form-label">Category <span class="text-muted">(Optional)</span></label>
                      <select name="category" class="form-select category-select">
                        <option value="">Select category...</option>
                        <% const mensCats = allCategories.filter(c => c.division === 'Mens'); %>
                        <% const womensCats = allCategories.filter(c => c.division === 'Womens'); %>
                        <% if(mensCats.length > 0) { %>
                          <optgroup label="Men's">
                            <% mensCats.forEach(cat => { %>
                            <option value="<%=cat._id %>" <%= product.category && product.category._id && product.category._id.toString() === cat._id.toString() ? 'selected' : '' %>><%= cat.categoryName %></option>
                            <% }); %>
                          </optgroup>
                        <% } %>
                        <% if(womensCats.length > 0) { %>
                          <optgroup label="Women's">
                            <% womensCats.forEach(cat => { %>
                            <option value="<%=cat._id %>" <%= product.category && product.category._id && product.category._id.toString() === cat._id.toString() ? 'selected' : '' %>><%= cat.categoryName %></option>
                            <% }); %>
                          </optgroup>
                        <% } %>
                      </select>
                    </div>
                    <div>
                      <label class="form-label">Stock</label>
                      <input type="number" name="quantity" min="1" value="<%=product.quantity %>" required class="form-control">
                    </div>
                    <div>
                      <label class="form-label">Price</label>
                      <input type="number" name="price" min="1" value="<%=product.price %>" required class="form-control">
                    </div>
                    <div>
                      <label class="form-label">Delivery Charges (Rs)</label>
                      <input type="number" name="deliveryCharges" min="0" step="0.01" value="<%= typeof product.deliveryCharges !== 'undefined' ? product.deliveryCharges : 0 %>" required class="form-control">
                    </div>
                    <div class="form-check mt-2">
                      <% if(product.increaseDeliveryChargesWithQuantity){ %>
                      <input class="form-check-input" checked type="checkbox" name="increaseDeliveryChargesWithQuantity" id="increaseDeliveryChargesWithQuantity-<%= product.id %>">
                      <% } else { %>
                      <input class="form-check-input" type="checkbox" name="increaseDeliveryChargesWithQuantity" id="increaseDeliveryChargesWithQuantity-<%= product.id %>">
                      <% } %>
                      <label class="form-check-label" for="increaseDeliveryChargesWithQuantity-<%= product.id %>">Increase delivery charges with quantity</label>
                    </div>
                    <div>
                      <label class="form-label">Discount <span class="text-muted">(in percentage)</span></label>
                      <input type="number" name="discount" min="0" max="100" step="0.01" value="<%=product.discount %>" class="form-control" placeholder="Optional">
                    </div>
                    <div class="form-check form-switch mt-2">
                      <% if(product.isFeatured){%>
                      <input class="form-check-input" checked type="checkbox" name="isFeatured" id="flexSwitchCheckDefault">
                      <% }else{%>
                      <input class="form-check-input" type="checkbox" name="isFeatured" id="flexSwitchCheckDefault">
                      <%  } %>
                      <label class="form-check-label" for="flexSwitchCheckDefault">Is Featured ?</label>
                    </div>
                    <div><label class="form-label">Description</label></div>
                    <div><textarea name="description" rows="5" class="form-control" placeholder="Add description" required><%=product.description %></textarea></div>
                    <div">
                      <label class="form-label">Upload Product Image</label>
                      <input type="file" multiple name="productImages" class="form-control">
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  <button type="submit" class="btn btn-dark">Save changes</button>
                </div>
                </form>
              </div>
            </div>
          </div>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script>
  function exportCsv() {
    myTable.export({
      type: "csv",
      skipColumn: [0, 8],
      filename: "product_details",
    });
  }

  // Initialize Select2 for category dropdown in edit modals
  $(document).ready(function() {
    // Initialize Select2 on page load
    $('.category-select').select2({
      placeholder: "Search and select category...",
      allowClear: true,
      theme: "bootstrap-5",
      width: '100%'
    });
  });

  // Re-initialize Select2 when any edit modal is shown
  $(document).on('show.bs.modal', function () {
    $(this).find('.category-select').each(function() {
      if (!$(this).data('select2')) {
        $(this).select2({
          placeholder: "Search and select category...",
          allowClear: true,
          theme: "bootstrap-5",
          width: '100%'
        });
      }
    });
  });

  // Destroy Select2 when modal is hidden to avoid memory leaks
  $(document).on('hidden.bs.modal', function () {
    $(this).find('.category-select').select2('destroy');
  });
</script>