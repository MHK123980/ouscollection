{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "views/**/*",
                    "public/**/*",
                    "models/**/*",
                    "routes/**/*",
                    "controllers/**/*",
                    "config/**/*",
                    "auth/**/*",
                    "middleware/**/*"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "server.js"
        }
    ]
}